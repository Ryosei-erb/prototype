      <div class="sold-index-imageBox">
        <%= image_tag product.image.url(:product) %>
        <p>---SOLD OUT---</p>
      </div>
      <% else %>
       <%= image_tag product.image.url(:product) %>
      <% end %>
    </div>
    <div class="product-name-price-space">
      <div class="product-name-space"><%= product.name %></div>
