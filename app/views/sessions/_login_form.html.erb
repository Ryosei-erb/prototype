<div class="row justify-content-center">
  <%= form_with(url: create_login_path, method: :post, local: true) do |f| %>
  <% end %>
  <div class="form-group col-auto">
    <strong><%= f.label :email, "メールアドレス" %></strong>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group col-auto">
    <strong><%= f.label :password , "パスワード" %></strong>
    <%= f.password_field :password, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group col-auto">
    <%= check_box_tag :remember, params[:remember] %>
    <div class="remember-check-label"><%= label_tag :remember %></div>
  </div>
  <div class="form-group col-auto">
    <%= f.submit "ログインする", class: "create-button" %>
  </div>
  <% end %>
</div>
