<div class="main-wrapper">
  <div class="container">
    <div class="search-products-tab"><%= "「#{@user.name}」のお気に入りリスト" %></div>
    <div class="row">
      <% @favorites_products.each do |product| %>
      <%= render "shared/product_segment", product: product %>
      <% end %>
    </div>
  </div>
  <% if @user.id == current_user.id %>

  <% else %>
  <% if @isRoom == true %>
  <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @membership do |e| %>
          <%= e.hidden_field :user_id, :value=> @user.id %>
        <% end %>
        <%= f.hidden_field :product_id, :value=> @product.id %>
        <%= f.submit "チャットを始める" %>
      <% end %>
    <% end %>
  <% end %>
  </div>
