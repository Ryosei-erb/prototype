<%= form_with(model: user, url: users_path, method: :post, local: true) do |f| %>
  <%= render "shared/error_messages", object: user %>
  <div class="form-group col-auto">
    <strong><%= f.label :name, "ニックネーム" %></strong>
    <%= f.text_field :name, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group col-auto">
    <strong><%= f.label :email, "メールアドレス" %></strong>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group col-auto">
    <strong><%= f.label :password , "パスワード" %></strong>
    <%= f.password_field :password, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group col-auto">
    <strong><%= f.label :password_confirmation, "確認" %></strong>
    <%= f.password_field :password_confirmation, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "label" do %>
      <%= icon "fas", "camera border" %>
      <%= f.file_field :image, class: "form-control image_file", accept: "image/jpeg, image/peg, image/gif, image/png" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit "登録する", class: "form-control create-button" %>
  </div>
<% end %>
